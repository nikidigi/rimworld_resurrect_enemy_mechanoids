{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean:debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "-c",
        "Debug",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean:release",
      "command": "dotnet",
      "type": "process",
      "args": [
        "clean",
        "-c",
        "Release",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "rm -rf ./bin ./obj",
      "windows": {
        "command": "rm -Recurse -Force ./bin; rm -Recurse -Force ./obj"
      },
      "dependsOn": [
        "clean:debug",
        "clean:release"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "-c",
        "Release",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "assembly",
      "type": "shell",
      "command": "mkdir -p ../1.4/Assemblies && cp ./bin/Release/ResurrectEnemyMechanoids.dll ../1.4/Assemblies",
      "windows": {
        "command": "mkdir ../1.4/Assemblies -Force; cp ./bin/Release/ResurrectEnemyMechanoids.dll ../1.4/Assemblies",
      },
      "dependsOn": [
        "build",
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
